<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/mifos_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_passcode_first_digit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp"
            app:layout_constraintEnd_toStartOf="@+id/cv_passcode_second_digit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
            app:strokeColor="@color/gray_btn_bg_color"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_passcode_first_digit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_passcode_second_digit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp"
            app:layout_constraintEnd_toStartOf="@+id/cv_passcode_third_digit"
            app:layout_constraintStart_toEndOf="@+id/cv_passcode_first_digit"
            app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
            app:strokeColor="@color/gray_btn_bg_color"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_passcode_second_digit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_passcode_third_digit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp"
            app:layout_constraintEnd_toStartOf="@id/cv_passcode_fourth_digit"
            app:layout_constraintStart_toEndOf="@+id/cv_passcode_second_digit"
            app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
            app:strokeColor="@color/gray_btn_bg_color"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_passcode_third_digit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_passcode_fourth_digit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="15dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_show_passcode"
            app:layout_constraintStart_toEndOf="@+id/cv_passcode_third_digit"
            app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
            app:strokeColor="@color/gray_btn_bg_color"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_passcode_fourth_digit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_show_passcode"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:onClick="changePassCodeVisibility"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_passcode_fourth_digit"
            app:layout_constraintTop_toBottomOf="@+id/iv_app_logo"
            app:srcCompat="@drawable/ic_show_passcode_eye" />

        <TextView
            android:id="@+id/tv_keypad_one"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="1"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/tv_keypad_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_passcode_first_digit" />

        <TextView
            android:id="@+id/tv_keypad_two"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="2"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/tv_keypad_three"
            app:layout_constraintStart_toEndOf="@+id/tv_keypad_one"
            app:layout_constraintTop_toBottomOf="@id/cv_passcode_first_digit" />

        <TextView
            android:id="@+id/tv_keypad_three"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="3"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_keypad_two"
            app:layout_constraintTop_toBottomOf="@id/cv_passcode_first_digit" />

        <TextView
            android:id="@+id/tv_keypad_four"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="4"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_keypad_five"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_one" />

        <TextView
            android:id="@+id/tv_keypad_five"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="5"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/tv_keypad_six"
            app:layout_constraintStart_toEndOf="@id/tv_keypad_four"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_one" />

        <TextView
            android:id="@+id/tv_keypad_six"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="6"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_keypad_five"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_one" />

        <TextView
            android:id="@+id/tv_keypad_seven"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="7"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/tv_keypad_eight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_four" />

        <TextView
            android:id="@+id/tv_keypad_eight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="8"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@id/tv_keypad_nine"
            app:layout_constraintStart_toEndOf="@id/tv_keypad_seven"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_four" />

        <TextView
            android:id="@+id/tv_keypad_nine"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="9"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_keypad_eight"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_four" />

        <TextView
            android:id="@+id/tv_keypad_zero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_background_btn"
            android:gravity="center"
            android:onClick="onKeypadBtnClick"
            android:tag="0"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_keypad_eight"
            app:layout_constraintStart_toEndOf="@id/tv_keypad_eight"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_eight" />

        <TextView
            android:id="@+id/tv_clear_passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background_clear_passcode"
            android:onClick="clearPassCode"
            android:padding="0.5dp"
            app:drawableLeftCompat="@drawable/ic_clear_passcode"
            app:drawableStartCompat="@drawable/ic_clear_passcode"
            app:layout_constraintBottom_toTopOf="@id/btn_set_passcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_keypad_zero"
            app:layout_constraintTop_toBottomOf="@id/tv_keypad_nine" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_set_passcode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/passcode_setup"
            android:textColor="@color/white"
            android:onClick="savePassCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_keypad_zero" />

        <LinearLayout
            android:id="@+id/ll_add_biometric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="startBiometricActivity"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_set_passcode">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fingerprint" />

            <TextView
                android:id="@+id/tv_biometric_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="@string/biometric"
                android:textColor="@color/black" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>